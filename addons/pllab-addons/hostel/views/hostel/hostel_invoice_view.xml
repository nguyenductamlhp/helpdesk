<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hostel_invoice_tree" model="ir.ui.view">
        <field name="name">view.hostel.invoice.tree</field>
        <field name="model">hostel.invoice</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name"/>
                <field name="date_from" />
                <field name="date_to" />
                <field name="invoice_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_hostel_invoice_form" model="ir.ui.view">
        <field name="name">view.hostel.invoice.form</field>
        <field name="model">hostel.invoice</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Allocate Expense" name="action_allocate_expense" states="draft" type="object" class="oe_highlight" />
                    <button string="Generate Payments" name="generate_payment" states="draft" type="object" class="oe_highlight" />
                    <button string="Validate" name="action_validate" states="draft" type="object" class="oe_highlight" />
                    <button string="Done" name="action_done" states="validate" type="object" class="oe_highlight" />
                    <button string="Cancel" name="action_cancel" type="object" class="oe_highlight" />
                    <button string="Reset To Draft" name="reset_to_draft" type="object" class="oe_highlight" />
                    <field name="state" widget="statusbar" readonly="1" on_change="1" />
                </header>
                <div class="oe_title" modifiers="{}">
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="room_id"></field>
                        <field name="responsible_ids" widget="many2many_tags"/>
                        <field name="total_factor" />
                    </group>
                    <group>
                        <field name="invoice_date"></field>
                        <field name="date_from" />
                        <field name="date_to"/>
                    </group>

                </group>
                <group string="Participants">
                    <field name="participant_ids" nolabel="1"
                        context="{'default_invoice_id': active_id, 'default_start': date_from, 'default_end': date_to}">
                        <tree editable="bottom">
                            <field name="invoice_id" invisible="1"/>
                            <field name="responsible_ids" invisible="1"/>
                            <field name="partner_id" domain="[('id', 'in', responsible_ids)]"/>
                            <field name="start" />
                            <field name="end" />
                            <field name="factor" />
                        </tree>
                    </field>
                </group>
                <group string="Expenses">
                    <field name="invoice_expense_ids" nolabel="1"
                            context="{'default_invoice_id': active_id, 'default_start': date_from, 'default_end': date_to}">
                        <tree editable="bottom">
                            <field name="invoice_id" invisible="1"/>
                            <field name="product_id" />
                            <field name="quantity" />
                            <field name="unit_price" />
                            <field name="total" sum="Total"/>
                            <field name="buy_date" />
                            <field name="owner_id" domain="[('id', 'in', parent.responsible_ids)]"/>
                            <field name="responsible_ids" widget="many2many_tags" domain="[('id', 'in', parent.participant_ids)]"/>
                            <field name="sum_factor" />
                            <field name="note" />
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="product_id" />
                                    <field name="quantity" />
                                    <field name="unit_price" />
                                    <field name="total" sum="Total"/>
                                    <field name="buy_date" />
                                    <field name="owner_id" domain="[('id', 'in', parent.responsible_ids)]"/>
                                    <field name="responsible_ids" widget="many2many_tags" domain="[('id', 'in', parent.participant_ids)]"/>
                                    <field name="sum_factor" />
                                </group>
                                <group>
                                    <field name="item_ids">
                                        <tree>
                                            <field name="product_id" />
                                            <field name="owner_id" />
                                            <field name="amount" />
                                        </tree>
                                    </field>
                                </group>
                            </group>
                        </form>
                    </field>
                </group>
                <group string="Payments">
                    <field name="payment_ids" nolabel="1">
                        <tree editable="top">
                            <field name="partner_id" readonly="1"/>
                            <field name="total" sum="Total" readonly="1"/>
                            <field name="paid" sum="Total" readonly="1"/>
                            <field name="remain" sum="Total" readonly="1"/>
                            <field name="payment_date" />
                        </tree>
                        <form>
                            <group>
                                <field name="partner_id" readonly="1"/>
                                <field name="total" readonly="1"/>
                                <field name="payment_date" />
                            </group>
                        </form>
                    </field>
                </group>
            </form>
        </field>
    </record>

</odoo>
