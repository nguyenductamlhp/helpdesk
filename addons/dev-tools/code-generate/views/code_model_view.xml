            </field>
        </record>

        <record id="view_code_model_tree" model="ir.ui.view">
            <field name="name">view.code.model.tree</field>
            <field name="model">code.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="model_string" />
                    <field name="model_name" />
                    <field name="is_inherit" />
                    <field name="model_type" />
