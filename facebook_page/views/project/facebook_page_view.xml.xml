<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="view_project_milestone_form" model="ir.ui.view">
            <field name="name">view.project.milestone.form</field>
            <field name="model">project.milestone</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="btn_create_git_milestone" type="object"
                            string="Create Milestone" class="oe_highlight"
                            groups="project.group_project_manager"></button>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Milestone Name"/>
                            </h1>
                            <field name="number" class="oe_edit_only" placeholder="Number" groups="project.group_project_manager"/>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" />
                                <field name="milestone_url" widget="url"/>
                            </group>
                            <group>
                                <field name="due_date" />
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_project_milestone_tree" model="ir.ui.view">
            <field name="name">view.project.milestone.tree</field>
            <field name="model">project.milestone</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="project_id" />
                    <field name="due_date" />
                </tree>
            </field>
        </record>
    </data>
</odoo>